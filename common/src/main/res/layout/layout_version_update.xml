<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_20"
    tools:ignore="HardcodedText,SpUsage,UnusedAttribute">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/bg_update_top"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="发现新版本是否更新？"
            android:textColor="#1a1a1a"
            android:textSize="@dimen/sp_14"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/btn_yes_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#ff2a2a"
            android:gravity="center"
            android:text="更新"
            android:foreground="@drawable/ripple_pressed_bg_2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/llt_no_force_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_yes_2"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:textColor="#ff0000"
                android:textSize="@dimen/sp_14"
                android:foreground="@drawable/ripple_pressed_bg_2"
                android:gravity="center"
                android:text="更新"/>

            <TextView
                android:id="@+id/btn_no_2"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:textColor="#ff0000"
                android:textSize="@dimen/sp_14"
                android:foreground="@drawable/ripple_pressed_bg_2"
                android:gravity="center"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15" />
</LinearLayout>
