<?xml version="1.0" encoding="utf-8"?>
<com.common.widget.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_pressed_bg_2"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_360"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_5"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5">

            <com.common.widget.CommonTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                tools:ignore="HardcodedText" />

            <com.common.widget.CommonTextView
                android:id="@+id/tv_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="@dimen/sp_10"
                android:paddingBottom="@dimen/dp_6"
                app:bottom_line_color="#cccccc"
                app:bottom_line_height="@dimen/dp_0_5"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <com.common.widget.CommonTextView
            android:id="@+id/tv_action_1"
            android:layout_width="@dimen/dp_65"
            android:layout_height="match_parent"
            android:background="@color/red_1"
            android:foreground="@drawable/ripple_pressed_bg_1"
            android:gravity="center"
            android:maxLines="1"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_15"
            app:bottom_line_color="#9E9E9E"
            app:bottom_line_height="0dp"
            tools:ignore="HardcodedText,UnusedAttribute" />
    </LinearLayout>

</com.common.widget.SwipeLayout>
