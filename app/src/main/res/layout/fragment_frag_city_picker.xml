<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.common.widget.wheel.CityPickerView
        android:id="@+id/city_picker"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center"
        android:text="确定"
        android:background="#DFDFDF"
        android:foreground="?selectableItemBackground"
        android:textSize="@dimen/sp_15"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="弹窗城市选择器"
        android:background="#DFDFDF"
        android:foreground="?selectableItemBackground"
        android:textSize="@dimen/sp_15"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <com.common.widget.CommonTextView
        android:id="@+id/tv"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_30"
        android:text="我是CommonTextView"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:background="#cccccc"
        app:clip_radius="@dimen/dp_5"
        app:bottom_line_color="#2DBFFF"
        app:bottom_line_height="@dimen/dp_3"
        app:right_line_color="#2DBFFF"
        app:right_line_stroke_width="@dimen/dp_3"
        app:top_line_color="#2DBFFF"
        app:top_line_height="@dimen/dp_3"
        app:left_line_color="#2dbfff"
        app:left_line_stroke_width="@dimen/dp_3"
        tools:ignore="HardcodedText" />

</LinearLayout>