<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <com.common.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        app:tb_height="@dimen/dp_24"
        app:tb_round_rect_radius="@dimen/dp_2"
        app:tb_selected_bg_color="#6200ff"
        app:tb_selected_text_color="#ffffff"
        app:tb_text_size="@dimen/sp_14"
        app:tb_unselected_bg_color="#00ffffff"
        app:tb_unselected_text_color="#666666"
        app:layout_constraintTop_toTopOf="parent"/>

    <include layout="@layout/layout_constraint_test_1" />

    <include layout="@layout/layout_constraint_test_2" />

</LinearLayout>