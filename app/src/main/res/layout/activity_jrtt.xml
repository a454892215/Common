<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flt_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="HardcodedText">


        <include layout="@layout/include_header" />

        <TextView
            android:id="@+id/tv_jni_info"
            android:layout_width="355dp"
            android:layout_height="@dimen/dp_180"
            android:background="#F44336"
            android:text="#ffffff"
            android:textSize="@dimen/sp_15"
            tools:ignore="SpUsage" />

        <LinearLayout
            android:id="@+id/llt_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#cccccc"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_25"
                android:background="#F44336"
                android:gravity="center"
                android:text="01"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_5"
                android:background="#F44336"
                android:gravity="center"
                android:text="02"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_5"
                android:background="#F44336"
                android:gravity="center"
                android:text="03"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_5"
                android:background="#F44336"
                android:gravity="center"
                android:text="04"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_5"
                android:background="#F44336"
                android:gravity="center"
                android:text="05"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_5"
                android:background="#F44336"
                android:gravity="center"
                android:text="06"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_5"
                android:background="#F44336"
                android:gravity="center"
                android:text="07"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_5"
                android:background="#F44336"
                android:gravity="center"
                android:text="08"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_seek_bar_progress"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffcccc"
            android:gravity="center"
            android:maxLines="1"
            android:text="0"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:indeterminateDrawable="@color/white"
            android:indeterminateOnly="false"
            android:max="640"
            android:maxHeight="@dimen/dp_8"
            android:progress="20"
            android:progressDrawable="@drawable/layer_list_seek_bar"
            android:splitTrack="false"
            android:thumb="@drawable/layer_seek_bar_thumb" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_seek_bar_progress2"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="#ffcccc"
        android:gravity="center"
        android:maxLines="1"
        android:text="0"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13" />
</FrameLayout>
